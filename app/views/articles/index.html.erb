<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table id="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr style="font-size: 20px">
        <td id="article-title"><%= article.title.length > 50 ? article.title[0..50] + '...' : article.title %></td>
        <td id="article-body"><%= article.body.length > 110 ? article.body[0..110] + '...' : article.body%></td>
        <td><button id="show"><%= link_to 'Show', article %></td></button>
        <td><button id="edit"><%= link_to 'Edit', edit_article_path(article) %></td></button>
        <td><button id="destroy" style="background-color: red"><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td></button>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button id="new" style="background-color: green"><%= link_to 'New Article', new_article_path %></button>
