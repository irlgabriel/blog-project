<p id="notice"><%= notice %></p>

<h1>Articles</h1>



<table id="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr style="font-size: 20px">
        <td id="title"><%= link_to article.title.length > 30 ? article.title[0..30] + '...' : article.title , article%></td>
        <td id="body"><%= article.body.length > 180 ? article.body[0..180] + '...' : article.body%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<button id="new" style="background-color: green"><%= link_to 'New Article', new_article_path %></button>
<br>


